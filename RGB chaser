// This program is to create a light chaser using a RGB light

// Define the variables
int RED = 13;
int GREEN = 12;
int BLUE = 11;

void setup() {
  // Define the outputs
  pinMode(OUTPUT, RED);
  pinMode(OUTPUT, GREEN);
  pinMode(OUTPUT, BLUE);
}

void loop() {
  // Same deal as normal light chaser
  digitalWrite(RED, HIGH);
  digitalWrite(BLUE, LOW);
  delay(1000);
  digitalWrite(GREEN, HIGH);
  digitalWrite(RED, LOW);
  delay(1000);
  digitalWrite(BLUE, HIGH);
  digitalWrite(GREEN, LOW);
  delay(1000);
}
